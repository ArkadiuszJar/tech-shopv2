// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cart {
  id    Int @id @default(autoincrement())
  producent String 
  name  String
  price Int
  url   String
}

model Pc {
  id    Int @id @default(autoincrement())
  producent String
  name  String
  price Int
  prevPrice Int?
  url   String
  screen Int?
  cpu    String?
  ram    Int?
  gpu    String?
}

model Phones {
  id    Int @id @default(autoincrement())
  producent String
  name  String
  price Int
  url   String
  screen Int?
  cpu    String?
  ram    Int?
}

model Gaming {
  id    Int @id @default(autoincrement())
  producent String
  name  String
  price Int
  url   String
}

model Audio {
  id    Int @id @default(autoincrement())
  producent String
  name  String
  price Int
  url   String
}

model Tv {
  id    Int @id @default(autoincrement())
  producent String
  name  String
  price Int
  url   String
  screen Int?
}

model Accessories {
  id    Int @id @default(autoincrement())
  producent String
  name  String
  price Int
  url   String
}

model Smarthome {
  id    Int @id @default(autoincrement())
  producent String
  name  String
  price Int
  url   String
}